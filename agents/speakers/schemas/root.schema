type SpeakerQuery {
    speakers: [Speaker]

    speaker(name: String, uuid: String): Speaker

    groups: [Group]

    group(uuid: String): Group
}

type SpeakerMutation {
    editSpeaker(
        name: String,
        uuid: String,

        playing: Boolean,
        muted: Boolean,

        volume: Int
    ): Speaker

    createGroup(
        uuid: String,
        name: String,
        initialQueue: Queue
    ): Group

    editGroup(
        uuid: String,
        name: String,
        volume: Int,
        playing: Boolean,
        muted: Boolean,
        queue: Queue
    ): Group

    removeGroup(uuid: String): Group
}

schema {
  query: SpeakerQuery,
  mutation: SpeakerMutation
}
